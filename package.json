{
  "name": "moltid-api",
  "version": "1.0.0",
  "description": "MoltID - The trust layer for the agent internet",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:create": "wrangler d1 create moltid",
    "db:migrate": "wrangler d1 execute moltid --file=src/db/schema.sql",
    "db:migrate:local": "wrangler d1 execute moltid --local --file=src/db/schema.sql",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.0",
    "hono": "^4.6.0",
    "nanoid": "^5.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.12.8",
    "@cloudflare/workers-types": "^4.20241106.0",
    "typescript": "^5.6.0",
    "vitest": "3.2",
    "wrangler": "^3.90.0"
  }
}
